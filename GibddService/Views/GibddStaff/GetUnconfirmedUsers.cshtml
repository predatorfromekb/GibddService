@using GibddService.Controllers
@using GibddService.Helpers
@model IEnumerable<DataLayer.Models.UserInfo>

@{
    ViewBag.Title = "Подтверждение личности пользователей";
}

<h2>Подтверждение личности пользователей</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassportSeries)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassportNumber)
        </th>
        <th></th>
    </tr>

@foreach (var userInfo in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => userInfo.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => userInfo.PassportSeries)
        </td>
        <td>
            @Html.DisplayFor(modelItem => userInfo.PassportNumber)
        </td>
        <td>
            @(Html.ActionLinkAsyncFor<GibddStaffController>("Подтвердить", e => e.ConfirmUser(null), new { id = userInfo.Id }))
        </td>
    </tr>
}

</table>
